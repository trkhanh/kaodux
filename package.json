{
    "name": "kaodux",
    "version": "0.0.1",
    "description": "kaodux ⇒ node.js + actors = your services have never been so µ",
    "main": "lib/index.js",
    "scripts": {
      "test": "yarn run lint-fix && mocha ./test/*.js",
      "test-watch": "yarn run lint && nyc mocha --watch ./test/*.js",
      "interactive-cover": "nyc --reporter=html mocha ./test/*.js && open ./coverage/index.html",
      "lint": "semistandard",
      "coverage": "nyc report --reporter=text-lcov | coveralls",
      "prepush": "yarn run test",
      "test-only": "mocha ./test/*.js",
      "test-only-watch": "nyc mocha --watch ./test/*.js",
      "lint-fix": "semistandard --fix"
    },
    "homepage": "https://kaodux.io",
    "repository": {
      "type": "git",
      "url": "git://github.com/trkhanh/kaodux"
    },
    "keywords": [
      "actors",
      "actor-model",
      "akka",
      "akka.net",
      "non-blocking",
      "actor system",
      "erlang",
      "event sourcing",
      "distributed-systems"
    ],
    "author": "Nick Cuthbert (https://github.com/trkhanh)",
    "license": "Apache-2.0",
    "bugs": {
      "url": "http://github.com/trkhanh/kaodux/issues"
    },
    "dependencies": {
      "denque": "^1.2.3"
    },
    "devDependencies": {
      "chai": "^4.1.1",
      "chai-as-promised": "^7.1.1",
      "coveralls": "^3.0.0",
      "eslint": "^4.8.0",
      "husky": "^0.14.3",
      "mocha": "^4.0.0",
      "nyc": "^11.2.1",
      "semistandard": "^11.0.0",
      "sinon": "^4.1.4",
      "sinon-chai": "^2.14.0"
    }
  }